generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model supplier {
  supplier_id     Int           @id @default(autoincrement())
  supplier_name   String        @db.VarChar(100)
  contact_number  String        @db.VarChar(20)
  address         String        @db.Text
  opening_balance Decimal       @default(0.00) @db.Decimal(12, 2)
  created_at      DateTime      @default(now()) @db.Timestamp(0)
  updated_at      DateTime      @default(now()) @db.Timestamp(0)
  transaction     transaction[]
}

model transaction {
  transaction_id Int                      @id @default(autoincrement())
  invoice_no     Int
  payment_type   transaction_payment_type
  supplier_id    Int
  amount         Int
  invoice_date   DateTime                 @default(now())
  created_at     DateTime                @default(now()) @db.Timestamp(0)
  supplier       supplier                 @relation(fields: [supplier_id], references: [supplier_id], map: "Transaction_supplier_id_fkey")

  @@unique([supplier_id, payment_type, invoice_no], map: "Transaction_supplier_id_payment_type_invoice_no_key")
}

enum transaction_payment_type {
  CR
  DR
}